<div class="content content--index home-content">
  <div class="home-center" style="text-align: center;">
    <img src="../images/imersys-logo.png" class="imersys-logo">
    <img src="../images/vr-index.png" class="vr-illustration">
  </div>

  <div id="homeContent" class="copy__wrap">
    <img src="../images/imersys-logo-white.png" class="mobile-logo">
    <ul class="menu">
      <li class="menu-item">
        <a href="<%- url_for('docs/introducao/') %>">Docs</a>
      </li>
      <!-- <li class="menu-item">
        <a href="<%- url_for('comunidade/') %>">Comunidade</a>
      </li> -->
    </ul>

    <%- page.content %>

    <a href="<%- url_for('docs/introducao/') %>"
       class="get-started nav-link">
      Acessar
    </a>

    <div id="usersContainer">
      <p>Usado por</p>
      <ul id="users">
        <% site.data.showcase.users.forEach(function (user, idx) { %>
          <li class="user">
            <a href="<%- user.url %>" title="<%- user.description %>">
              <img src="/images/users/<%- user.company.toLowerCase().replace(/\s/g, '') %>.svg">
            </a>
          </li>
        <% }); %>
      </ul>
    </div>
  </div>
</div>
